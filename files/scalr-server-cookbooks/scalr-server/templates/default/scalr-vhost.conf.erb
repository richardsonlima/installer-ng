<VirtualHost *:80>
  ServerName <%= node[:scalr_server][:app][:endpoint_host] %>
  ServerAdmin <%= node[:scalr_server][:app][:email_from_address] %>
  DocumentRoot <%= node[:scalr][:core][:location] %>/app/www

  <Directory <%= node[:scalr][:core][:location] %>/app/www>
    Options -Indexes +FollowSymLinks +MultiViews
    AllowOverride All
    AuthType None
    Order allow,deny
    Allow from all
    Satisfy Any
    Require all granted
  </Directory>

  ErrorLog  <%= node[:scalr][:core][:log_dir] %>/web.error.log
  CustomLog <%= node[:scalr][:core][:log_dir] %>/web.access.log combined
  LogLevel warn
</VirtualHost>
