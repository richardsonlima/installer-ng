DISABLE=0
MAXWAIT=30
ENABLE_COREFILES=0

RRDC_USER=<%= node[:scalr][:core][:users][:service] %>

OPTIONS="-s <%= node[:scalr][:core][:group] %>"
OPTIONS="$OPTIONS -l unix:<%= node[:scalr][:rrd][:run_dir] %>/rrdcached.sock"
OPTIONS="$OPTIONS -j <%= node[:scalr][:rrd][:journal_dir] %> -F"
OPTIONS="$OPTIONS -b <%= node[:scalr][:rrd][:rrd_dir] %> -B"

# Note that the following is redundant (as of now), considering that the PID file is hardcoded
# in the init files on RHEL.
OPTIONS="$OPTIONS -p <%= node[:scalr][:rrd][:run_dir] %>/rrdcached.pid"
